# Color def.        FG              BG          Pattern
######################################################################################
color index         brightcyan      default     '~N'    # new messages
color index         cyan            default     '~D'    # deleted messages
color hdrdefault    brightblack     white
color quoted        color3          default
color quoted1       green           default
color quoted2       color3          default
color quoted3       green           default
color indicator     brightyellow    green
color indicator     brightred       default
color indicator     brightyellow    default
color attachment    brightblue      white
color error         brightred       default
color message       brightcyan      default
color tree          cyan            default      # the thread tree in the index menu
color search        brightblack     green
color status        brightyellow    blue
color bold          brightwhite     default
color underline     brightwhite     default
color markers       magenta         default
color signature     green           default
color tilde         white           default
# URLs
color body          brightcyan      default   "(https|http|ftp|news|telnet|finger)://[^ ]*"
mono  body bold     "(https|http|ftp|news|telnet|finger)://[^ ]*"
# email addresses
color body          brightcyan      default   "[-a-z_0-9_+.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
mono  body bold     "[-a-z_0-9_+.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
mono  quoted bold

color header        brightred       brightwhite "is in ORBS"
color header        brightred       brightwhite "^X-Reject: "
color header        brightblue      brightwhite "^Delivered-to:"

source ~/.mutt/colorrc

#
# Ignore header we don't want to see
#
# ignore X-MS-Has-Attach
# ignore Xignore-MS-TNEF-Correlator
# ignore X-MS-TNEF-Correlator
# ignore Thread-Topic
# ignore Thread-Index
# ignore X-OriginalArrivalTime
# ignore X-MimeOLE
# ignore X-BrightmailFiltered
# ignore X-Brightmail-Tracker
# ignore X-IronPort-AV
# ignore X-IronPort-Anti-Spam-Filtered
# ignore X-IronPort-Anti-Spam-Result
# ignore In-Reply-To
# ignore Accept-Language
# ignore AcceptLanguage
# ignore DomainKey-Signature
# ignore X-Priority
ignore *
unignore from: date subject to cc
unignore x-spam-status list-id

# By default save emails to INBOX/Old
save-hook '.'                 '=INBOX/Old'

