set copy=yes                      # always save a copy of outgoing messages
set hostname=salmat.com.au        # my DNS domain
set charset="iso-8859-1"          # character set for your terminal
set edit_headers                  # let me edit the message header when composing
set fast_reply                    # skip initial prompts when replying
set indent_str="> "               # reply quote set to 1 byte
set include                       # always include messages when replying
set nomark_old                    # I don't care about whether a message is old
set mime_forward=ask-no           # use message/rfc822 type to forward messages
set print_command=/bin/false      # how to print things (I like to save trees)
set noprompt_after                # ask me for a command after the external pager exits
set read_inc=15                   # show progress when reading a mailbox
set reply_to                      # always use reply-to if present
set nosave_empty                  # remove files when no messages are left
set timeout=15                    # time to check new emails
set help                          # show the help lines
# set editor="vim -T xterm-color -i NONE"          # editor to use when composing messages
set editor="/users/et6339/files/vim/bin/vim -i NONE" 
set signature=/users/et6339/.signature
set arrow_cursor=yes             

# Check for any missing attachment if the body mentions "attach"...
set sendmail = "/users/et6339/files/bin/mutt_check_attachment_before_send.sh /usr/lib/sendmail -oem -oi"

############################################################
# Return-receipts
#
# when to return an error message {never,failure,delay,success}
# set dsn_notify = 'failure,delay,success'
set dsn_notify = 'failure,delay'

# what to return in the error message {hdrs,full}
set dsn_return = 'hdrs'

#
# My email header
#
set from       = "eddy.tan@salmat.com.au"
set realname   = "Eddy Tan"
