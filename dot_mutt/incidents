# set reverse_name                # use my address as it appears in the message am replying to
set forward_format="[FW:] %s"     # Subject header in forward msg
set folder_format="%2C %t %F %5s %f" # Set the folder structure

auto_view application/x-gunzip
auto_view application/x-gzip

